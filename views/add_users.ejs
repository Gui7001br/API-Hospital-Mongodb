<%- include('layout/footer') %>

<div class="container">
   <div class="row">
     <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-primary">
             <h3 class="text-light">Adicionar novo paciente</h3>
          </div>
          <div class="card-body p-4">
             <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="nome">nome</label>
                  <input type="text" name="nome" class="form-control form-control-lg"  placeholder="Adicione o nome" required />
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control form-control-lg"  placeholder="Adicione o email" required />
                </div>
                 
                <div class="mb-3">
                    <label for="Telefone">Telefone</label>
                    <input type="tel" name="Telefone" class="form-control form-control-lg"  placeholder="Adicione o Telefone" required />
                </div>

                <div class="mb-3">
                    <label for="Date">Consulta</label>
                    <input type="date" name="Date" class="form-control form-control-lg" placeholder="Entre com a data de consulta" required>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Selecione a foto</label>
                    <input type="file" name="image" class="form-control form-control-lg" required />
                  </div>
                 
                  <div class="mb-3 d-grid">
                   
                    <input type="submit" name="submit" value = "adicionar paciente" class="btn btn-primary btn-lg" />
                  </div>

             </form>
          </div>
        </div>
     </div>
   </div>
</div>